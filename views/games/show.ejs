<%- include('../partials/header') %>

    <section id="show-page">
        <div>Title: </div>
        <div>
            <%= game.title %>
        </div>
        <div>Genre: </div>
        <div>
            <%= game.gameType %>
        </div>
        <div>Total Entries: </div>
        <div>
            <%= game.totalEntries %>
        </div>
        <div>Last Patch Date: </div>
        <div>
            <%= game.lastPatchDate.toLocaleDateString() %>
        </div>
    </section>

    <br><br>
    <h2>Add Character or Item</h2>
    <form id="add-review-form" method="POST" action="/games/<%= game._id %>/destinations">
        <label>Destination Airport:
            <select name="airport">
                <option value="AUS">AUS</option>
                <option value="DFW">DFW</option>
                <option value="DEN">DEN</option>
                <option value="LAX">LAX</option>
                <option value="SAN">SAN</option>
            </select>
        </label><br>
        <label>Land Date/Time:
            <input type="datetime-local" name="arrival">
        </label><br>
        <button type="submit">Add Destination</button>
    </form>

    <% if (game.entities.length) { %>
        <table>
            <thead>
                <tr>
                    <th>Land Airport</th>
                    <th>Land Date/Time</th>
                </tr>
            </thead>
            <tbody>
                <% game.entities.forEach(function(e) { %>
